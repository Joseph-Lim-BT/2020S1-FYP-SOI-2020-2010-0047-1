@model material;

@section MoreScripts {
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
}


<form asp-controller="Equipment"
      asp-action="AddMaterial"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-0 col-sm-6 ">
            <h2>Add Material</h2>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="ELEMENT_MATERIAL_NO">Element Material No :</label>
        <div class="col-sm-5">
            <input asp-for="ELEMENT_MATERIAL_NO" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="ELEMENT_MATERIAL_NO" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="ELEMENT_MATERIAL_DESC">Element Material Description :</label>
        <div class="col-sm-5">
            <input asp-for="ELEMENT_MATERIAL_DESC" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="ELEMENT_MATERIAL_DESC" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="GROUP_NSN_NO">Group NSN No :</label>
        <div class="col-sm-5">
            <input asp-for="GROUP_NSN_NO" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="GROUP_NSN_NO" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="GROUP_NSN_DESC">Group NSN Description :</label>
        <div class="col-sm-5">
            <input asp-for="GROUP_NSN_DESC" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="GROUP_NSN_DESC" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="MATERIAL_TYPE">Material Type</label>
        <div class="col-sm-3">
            <select class="form-control dropdown" asp-for="MATERIAL_TYPE">
                ">
                <option value="">--SELECT--</option>
                <option value="Serial">Serial</option>
                <option value="Non-Serial">Non-Serial</option>

            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="MATERIAL_UNIT">Material Unit</label>
        <div class="col-sm-3">
            <select class="form-control dropdown" asp-for="MATERIAL_UNIT">
                <option value="">--SELECT--</option>
                <option value="EA">EA</option>
                <option value="PR">PR</option>
                <option value="SE">SE</option>
            </select>
        </div>
    </div>


    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    <text>@Html.Raw(ViewData["Message"])</text>
                </div>
            </div>
        </div>
    }

</form>
