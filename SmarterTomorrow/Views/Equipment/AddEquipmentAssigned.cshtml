@model assignment;

@section MoreScripts {
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>
}


<form asp-controller="Equipment"
      asp-action="AddEquipmentAssigned"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-0 col-sm-6 ">
            <h2>Assign Equipment to Military Personnel</h2>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="NRIC">NAME :</label>
        <div class="col-sm-4">
            <select class="form-control dropdown" asp-for="NRIC">
                @foreach (User row in ViewData["Assign"] as List
<User>
)
                {
                    <option value="@row.NRIC">
                        @(row.FULL_NAME + "(" + row.NRIC + ")")
                    </option>
                }

            </select>

        </div>
    </div>


        <div class="form-group row">
            <label class="control-label col-sm-2" asp-for="EQUIPMENT_ID">Equipment ID :</label>
            <div class="col-sm-3">
                <select class="form-control dropdown" asp-for="EQUIPMENT_ID">
                    <option selected="">No Equipment</option>
                    @foreach (Equipment row in ViewData["EquipID"] as List
<Equipment>
)
                    {
                        <option value="@row.EQUIPMENT_ID">
                            @(row.EQUIPMENT_NAME + "(BN:" + row.BUTT_NO + ")")
                        </option>
                    }

                </select>

            </div>
        </div>


        <div class="form-group row">
            <label class="control-label col-sm-2" asp-for="ACTIVITY_ID">Activity Description :</label>
            <div class="col-sm-3">
                <select class="form-control dropdown" asp-for="ACTIVITY_ID">
                    @foreach (activity row in ViewData["ActivityID"] as List
<activity>
)
                    {
                        <option value="@row.ACTIVITY_ID">
                            @row.ACTIVITY_DESC
                        </option>
                    }

                </select>

            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>

        @if (ViewData["Message"] != null)
        {
            <div class="form-group row">
                <div class="offset-sm-2 col-sm-6">
                    <div class="alert alert-@ViewData["MsgType"]">
                        <text>@Html.Raw(ViewData["Message"])</text>
                    </div>
                </div>
            </div>
        }

</form>
