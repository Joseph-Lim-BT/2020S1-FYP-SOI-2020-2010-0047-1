@model List<activity_trans_dtl>
<h2>Transaction Detail List</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">
        @TempData["Message"]
    </div>
}

<link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
<link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $('#jsappteqTable').DataTable({
            ordering: true,
            paging: true,
            searching: true,
            info: true,
            lengthChange: true,
            lengthMenu: [[6, 10, 20, -1], [6, 10, 20, "All"]]
        });
    });

/**/</script>
<div class="container">
    <table class="table table-condensed table-hover" id="jsappteqTable">
        <thead>

            <tr>
                <th scope="col">Transaction ID</th>
                <th scope="col">Record ID</th>
                <th scope="col">Full Description</th>
                <th scope="col">Short Description</th>
                <th scope="col">Storage Location</th>
                <th scope="col">Storage Bin</th>
                <th scope="col">Quantity</th>
            </tr>

        </thead>
        <tbody>
            @foreach (activity_trans_dtl dtl in Model)
            {

            <tr>
                <td>@dtl.TRANS_ID</td>
                <td>@dtl.RECORD_ID</td>
                <td>@dtl.FULL_DESC</td>
                <td>@dtl.SHORT_DESC</td>
                <td>@dtl.STORAGE_LOCATION</td>
                <td>@dtl.STORAGE_BIN</td>
                <td>@dtl.QUANTITY</td>
            </tr>


            }
        </tbody>
    </table>

</div>