@model Equipment
@section MoreScripts {
    <script src="
            /lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

    <script language="javascript">
        $(document).ready(function () {
            $('#JsCreatedDT')
                .datetimepicker({
                    format: 'YYYY-MM-DD HH:mm:ss'
                });
            $('#JsModifiedDT')
                .datetimepicker({
                    format: 'YYYY-MM-DD HH:mm:ss'
                });
        });
    </script>

}

<!DOCTYPE html>

<form asp-controller="Loan"
      asp-action="LoanEquipment"
      method="post">


    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <h2>Loan Equipment</h2>
        </div>
    </div>

    <hr />
    <input asp-for="EQUIPMENT_ID" hidden />

    <div class="form-grop row">
        <label class="control-label col-sm-2" asp-for="SERIAL_NO"> Serial No:</label>
        <div class="col-sm-5">
            <input asp-for="SERIAL_NO" class="form-control" readonly />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="EQUIPMENT_NAME">Equipment Name :</label>
        <div class="col-sm-5">
            <input asp-for="EQUIPMENT_NAME" class="form-control" readonly />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="EQUIPMENT_TYPE_ID">Equipment Type ID :</label>
        <div class="col-sm-5">

            <input asp-for="EQUIPMENT_TYPE_ID" class="form-control" readonly />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="ELEMENT_MATERIAL_NO">Element Material No:</label>
        <div class="col-sm-5">
            <input asp-for="ELEMENT_MATERIAL_NO" class="form-control" readonly />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="STORAGE_LOCATION">Storage Location :</label>
        <div class="col-sm-5">
            <input asp-for="STORAGE_LOCATION" class="form-control" readonly />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="STORAGE_BIN">Storage Bin :</label>
        <div class="col-sm-5">
            <input asp-for="STORAGE_BIN" class="form-control" readonly />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="BOX_LOT_NO">Box Lot No:</label>
        <div class="col-sm-5">
            <input asp-for="BOX_LOT_NO" class="form-control" readonly />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="BUTT_NO">Butt No:</label>
        <div class="col-sm-5">
            <input asp-for="BUTT_NO" class="form-control" readonly />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="QUANTITY">Quantity:</label>
        <div class="col-sm-5">
            <input asp-for="QUANTITY" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="QUANTITY" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="MODIFIED_BY">Modified By:</label>
        <div class="col-sm-5">
            <input asp-for="MODIFIED_BY" asp-format="{0:yyyy-MM-dd}" class="form-control" readonly />
        </div>

    </div>

    <input asp-for="DTE_TIME_LAST_MOD" hidden value="@DateTime.Today" />

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Add Voucher" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="alert alert-@ViewData["MsgType"]">
                <text>@ViewData["Message"]</text>
            </div>
        </div>
    }
</form>
