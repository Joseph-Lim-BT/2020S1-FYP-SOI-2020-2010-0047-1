@model assignment;


@section MoreScripts {
    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
} 


<form asp-controller="Package" asp-action="AddPackageAssigned" method="post">
    <div class="form-group row">
        <h2>Assign Equipment to Solider</h2>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="NRIC">NRIC : </label>
        <div class="col-sm-3">
            <select class="form-control dropdown" asp-for="NRIC">
                @foreach (User row in ViewData["Assign"] as List<User>)
                {
                    <option value="@row.NRIC">
                       @(row.FULL_NAME + "(" + row.NRIC + ")")
                    </option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <div>
            <label class="control-label">Select the package you want to assign to the solider: </label>

        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="PACKAGE_ID">Package ID :</label>
        <div class="col-sm-3">
            <select class="form-control dropdown" asp-for="PACKAGE_ID">
                <option selected="">No Package</option>
                @foreach (package row in ViewData["PackageID"] as List
<package>
)
                {
                    <option value="@row.PACKAGE_ID">
                        @{
                            var display = row.PACKAGE_DESC + "(" + row.PACKAGE_ID + ")";
                        }
                        @display
                    </option>
                }

            </select>

        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="ACTIVITY_ID">Activity Description :</label>
        <div class="col-sm-3">
            <select class="form-control dropdown" asp-for="ACTIVITY_ID">
                @foreach (activity row in ViewData["ActivityID"] as List
<activity>
)
                {
                    <option value="@row.ACTIVITY_ID">
                        @row.ACTIVITY_DESC
                    </option>
                }

            </select>

        </div>
    </div>
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    <text>@Html.Raw(ViewData["Message"])</text>
                </div>
            </div>
        </div>
    }

</form>
